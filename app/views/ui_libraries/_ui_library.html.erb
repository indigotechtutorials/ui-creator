<div id="<%= dom_id ui_library %>" class="w-full h-40 bg-white rounded-lg shadow-lg p-4 flex flex-col justify-between">
  <%= link_to ui_library do %>
    <span class="text-2xl font-semibold">
      <%= ui_library.name %> UI
    </span>
  <% end %>
  <div class="flex items-center gap-2">
    <%= link_to "Show", ui_library, class: "" %>
    <%= link_to "Edit", edit_ui_library_path(ui_library), class: "" %>
    <%= button_to "Destroy", ui_library, method: :delete, class: "", data: { turbo_confirm: "Are you sure?" } %>
  </div>
</div>
