<% content_for :title, "Your UI libraries" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% if @ui_libraries.any? %>
    <div class="flex justify-between items-center">
      <h1 class="font-bold text-4xl">Your UI Libraries</h1>
    </div>

    <div id="ui_libraries" class="w-full grid lg:grid-cols-4 gap-8 mt-8">
        <% @ui_libraries.each do |ui_library| %>
          <%= render ui_library %>
          <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2 hidden">
            <%= link_to "Show", ui_library, class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
            <%= link_to "Edit", edit_ui_library_path(ui_library), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
            <%= button_to "Destroy", ui_library, method: :delete, class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: "Are you sure?" } %>
          </div>
        <% end %>
    </div>
  <% else %>
    <h1 class="font-bold text-4xl text-center">You haven't created any UI libraries yet.</h1>
    <p class="text-center my-10"> </p>
    <%= link_to "Create one now", new_ui_library_path, class: "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white w-40 flex items-center justify-center mx-auto font-medium" %>
  <% end %>
</div>
